{
"name": "Top Posts Viewer",
"version": "1.0",
"description": "Launch a new tab with top posts from any subreddit on reddit.",
"manifest_version": 2,

"permissions": [
    "contextMenus",
    "tabs"
],
"background": {
    "scripts": ["js/background.js"]
},
"browser_action" : {
    "default_icon" : "images/icon.png"
},
"icons" : {
    "16" : "images/icon.png",
    "32" : "images/icon.png",
    "48" : "images/icon.png",
    "128" : "images/icon.png"
    
}
}